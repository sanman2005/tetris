{
  "root": true,

  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "jquery": true,
    "jest": true,
    "es6": true
  },

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },

  "parser": "@typescript-eslint/parser",

  "plugins": ["@typescript-eslint"],

  "rules": {
    "no-magic-numbers": [false, { "ignore-jsx": true }]
  },

  "extends": ["tslint-config-airbnb-base"]
}
