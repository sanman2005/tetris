.profile
  flex(row, nowrap, flex-start, flex-start)

  +below('sm')
    flex-direction column

  &__photo
    position relative
    margin-right $columnPadding
    width 300px
    height 300px
    imageFull(110%)
    background-color rgba($colorBlack, 0.4)
    shadowInset()
    margin-bottom $columnPadding

    +below('xs')
      width 150px
      height 150px

    .input-image
      position static
      height 100%
      margin 0

    &-empty
      flex()
      justify-content center
      width 100%
      height 100%

      +below('xs')
        svg
          width 80%
          height 80%

    &-camera
      position absolute
      bottom 10px
      right 20px
      width 50px
      opacity 0
      pointer-events none
      transition()

      svg *
        fill $colorWhite

      +above('sm')
        ^[1]:hover &
          opacity 1

    &-name
      theme(--color-button-light)

  &__info
    width 100%
    max-width 700px
    flex(column)
    align-items flex-start
    align-self stretch
    background-color $colorBackMain
    border-radius $borderRadius
    padding $columnPadding
    shadowText()

    +below('xs')
      justify-content flex-start

  &__name
    width 100%
    flex()
    textCompressed(40px)
    color $colorWhite

  &__links
    width 100%
    margin $columnPadding 0
    textCompressed(25px)
    color $colorGray5
    font-weight 400

    +below('xs')
      textSize(15px)
      margin-top 20px

    &-title
      width 100%
      text-align center

    .button
      margin $columnPadding 0

  &__edit-button
    max-width 300px
    margin $columnPadding auto 0

    +below('xs')
      margin-top 38px
      width 100%

  &__exit
    width 50px
    height @width

  &-edit
  &-password
    width 100%
    max-width 400px
    background-color $colorBackMain
    border-radius $borderRadius
    padding $columnPadding
    shadowText()

    &__password
      margin-top 40px
