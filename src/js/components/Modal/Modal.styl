.modal
  &-content
    height 100%
    padding $columnPadding
    overflow hidden
    shadow($colorShadowLight, 12px)

    +above('sm')
      padding 20px

    &--nopad
      padding 0

  &-close
    position absolute
    top $columnPadding
    right @top
    width 38px
    height 38px
    padding 10px
    cursor pointer
    z-index 1

    +below('xs')
      right 20px

    svg
      width 100%
      height 100%

      *
        fill $colorMain1
        transition()

    &:hover svg *
      fill $colorMain2

.ReactModal__Overlay
  background-color $colorBackMain !important
  opacity .9

.ReactModal__Content
  +below('xs')
    border none !important
    top 0 !important
    left 0 !important
    right 0 !important
    bottom 0 !important
