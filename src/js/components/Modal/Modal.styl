.modal
  &-content
    height 100%
    padding 60px
    overflow hidden
    shadow($colorShadowLight, 12px, true)

    +above('sm')
      padding 20px

    &--nopad
      padding 0

  &-close
    position absolute
    top 60px
    right 60px
    width 38px
    height 38px
    cursor pointer
    z-index 1

    +below('xs')
      right 20px

    svg
      width 100%
      height 100%

      *
        fill $colorGray6
        transition()

    &:hover svg *
      fill $colorMain1

.ReactModal__Overlay
  background-color $colorBackMain !important
  opacity .9

.ReactModal__Content
  +below('xs')
    border none !important
    top 0 !important
    left 0 !important
    right 0 !important
    bottom 0 !important
