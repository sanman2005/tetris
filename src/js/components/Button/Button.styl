buttonColor($backColor, $hoverColor = $backColor, $hoverBackColor = $colorOrange)
  background-color $backColor

  &:hover
    background-color $hoverBackColor
    color $hoverColor

  &:not(.button--shadow)
    shadowSimple()

  &.button--shadow
    color $colorGray4
    shadow($backColor, 7px, true, darken($backColor, 20%))

  &:active
    color $colorMain2

.button
  display flex
  border-radius $borderRadius
  padding 13px 20px
  color $colorWhite
  itemDesc(none)
  justify-content center
  align-items center
  transition()
  text-decoration none
  text-align center
  cursor pointer
  outline none
  width 100%
  border 2px solid transparent
  background-color transparent

  +below('xs')
    textSize(14px)
    padding 5px 7px

  &[disabled]
    opacity .5
    pointer-events none
    box-shadow none !important

  &--shadow
    color $colorMain1
    background-color $colorBackMain
    shadow($colorShadowLight, 7px, true)

    &:hover
      color $colorMain2

  &--main
    buttonColor($colorMain1, $colorWhite)

  &--main2
    buttonColor($colorMain2, $colorMain1)

  &--red
    buttonColor($colorRed2)

  &--yellow
    buttonColor($colorYellow)

  &--light
    theme(--color-button-light)
    theme(--color-button-light, border-color)
    shadowText()
    shadowBorder(2px, $borderRadius, true)

    &:hover
      shadowText(true)
      shadowBorder(2px)
      color $colorMain1
    &:active
      border-color $colorGray1
      color $colorGray1

  &--circle
  &--circle.button--shadow
    border-radius 50%
    width 60px
    height @width
    padding 7px

    +below('xs')
      padding 5px

    &:hover
      border-radius 50%

      &::before
        border-radius 50%

  &--autosize
    display inline-flex
    width auto

  &--icon
    width 50px
    padding 0

    +below('xs')
      width 40px
      height 30px

    svg
      width 60%
      height @width

      *
        transition()

    &-main
      svg *
        fill $colorMain1
        stroke @fill

      &:hover
        svg *
          fill $colorMain2
          stroke @fill
