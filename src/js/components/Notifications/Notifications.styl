.notifications
  background-color $colorWhite
  position absolute
  top 99px
  width 100%
  max-height 0
  overflow hidden
  transition()

  +below('xs')
    top 56px

  &__wrapper
    max-height calc(50vh - 60px)
    scrollbar($colorMain1, var(--color-back))

  &--opened
    max-height 50vh
    box-shadow 0 8px 12px rgba(0, 0, 0, .3)

  &__hide
    width 100%
    text-align center
    padding-top 15px
    padding-bottom 15px
    box-shadow 0 8px 12px rgba(0, 0, 0, 0.3)
    display inline-block
    itemDesc()
    color rgba($colorGray1, .5)
    cursor pointer
    font-weight 400
    theme(--color-notifications, background-color)

.notification
  position relative
  padding-top 24px
  theme(--color-back, background-color)

  &__new
    position absolute
    top calc(50% - 10px)
    left 72px
    width 20px
    height 20px
    border-radius 50%
    background $colorMain1

    +below('xs')
      top 50px
      left 15px
      width 15px
      height 15px

  &__photo
    margin-right 50px
    width 65px
    height 65px
    imageFull(105%)

    +below('xs')
      margin-right 18px

  &__main
    padding-right 10px

    span
      textCompressed(25px)
      padding-top 7px
      font-weight 400
      theme(--color-dark)

      +below('xs')
        textSize(20px)
        padding-top 0
        letter-spacing 0.03em

    p
      margin 10px 0 0
      padding-bottom 10px
      color $colorGray1
      font-size 15px
      line-height 22px

      +below('xs')
        display none

  &__button
    width 100px
    textSize(15px)
    padding 0
    height 30px

    +below('xs')
      font-size 15px
      line-height 25px

  &__date
    color $colorGray1
    font-size 15px
    line-height 22px
    opacity 0.5
    flex-shrink 0
    margin 5px 0 0 0

    +below('xs')
      margin-top 0

  &--new
    theme(--color-notification-new, background-color)

  &__content
    display flex
    flex-direction column
    padding-bottom 30px

    &-inner
      display flex
      padding-left 115px
      padding-right 65px

      +below('xs')
        padding-left 30px
        padding-right 0

      &-text
        width 82%
        display flex
        flex-direction column

  &__inner
    &:not(:first-child)
      .notification
        padding-bottom 15px

    &-none
      text-align center
      textSize(45px)
      padding 20px 0
      theme(--color-text)

      +below('xs')
        textSize(25px)
