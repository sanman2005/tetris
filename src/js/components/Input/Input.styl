.input
  position relative
  display block
  width 100%
  font-size 15px
  line-height 22px
  color $colorMain1
  margin-bottom 20px

  +above('sm')
    font-size 20px
    line-height 30px

  input
  textarea
    width 100%
    shadowBorder(1px, 6px)
    outline none
    padding 20px
    background-color transparent

    &:-webkit-autofill
      -webkit-animation autofill 0s forwards
      animation autofill 0s forwards
      background-color transparent

    &::-webkit-contacts-auto-fill-button
    &::-webkit-credentials-auto-fill-button
    &::-webkit-caps-lock-indicator
      visibility hidden
      display none !important
      pointer-events none
      position absolute
      right 0

  textarea
    min-height 95px
    resize none

    +above('sm')
      min-height 124px

  & input:focus + &__label
  & input:-webkit-autofill + &__label
  & textarea:focus + &__label
  & textarea:-webkit-autofill + &__label
  &:not([data-value='']) &__label
    top 2px
    left 25px
    font-size 10px

  &__label
    position absolute
    left 20px
    top 20px
    color $colorGray1
    pointer-events none
    transition()

    +above('sm')
      top 18px

  &__error
    error()
    position absolute
    left 10px
    right 10px
    bottom 7px
    padding 1px 10px
    font-size 15px
    line-height 16px

    +above('sm')
      font-size 12px

  &--required
    shadow($colorShadowLight, 10px)
    padding 4px

    & ^[0]__label
      shadowText()

    & input:focus
    & input:-webkit-autofill
    & textarea:focus
    & textarea:-webkit-autofill
    &:not([data-value='']) input
    &:not([data-value='']) textarea
      shadowInset(3px)

  &-image
    position relative
    height 150px
    imageFull(110%)
    background-color rgba($colorBlack, 0.4)
    shadowInset()

    input
      position absolute
      fullSize()
      cursor pointer
      z-index 1
      opacity 0

    img
      z-index -1
      opacity .5

    &__label
      position absolute
      fullSize()
      flex(row, nowrap, center)
      textSize(30px)
      transition()
      text-align center
      cursor pointer

    &:hover &__label
      color $colorMain2

    &__camera
      position absolute
      bottom 10px
      right 20px
      width 50px
      opacity 0
      pointer-events none
      transition()

      svg *
        fill $colorWhite

      +above('sm')
        ^[1]:hover &
          opacity 1

    &-delete
      cross($colorRed2)
      position absolute
      top 'calc(%s / 2)' % $columnPadding
      right @top
      width 20px
      height @width
      cursor pointer
      transition()
      filter drop-shadow(0 0 2px $colorWhite)
      z-index 2

      &:hover
        filter drop-shadow(0 0 5px $colorWhite)

@keyframes autofill
  100%
    background-color transparent
    color $colorWhite
