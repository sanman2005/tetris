.slider
  position relative

  +below('sm')
    padding-bottom 40px

  &__arrow
    position absolute
    top calc(50% - 30px)
    left auto
    padding 15px
    display block
    transition()
    z-index 1
    cursor pointer

    +below('xs')
      display none

    svg
      width 100%
      height 100%

      *
        fill $colorMain2

    &:active
      opacity .3

    &:hover
      opacity 1

    &.slick-disabled
      pointer-events none
      opacity .3
      box-shadow none

    $arrowOffset = -($columnPaddingLg * 3)

    &--prev
      left $arrowOffset

      svg
        transform translateX(-2px) rotateZ(90deg)

    &--next
      right $arrowOffset

      svg
        transform translateX(2px) rotateZ(-90deg)

  &__pagination
    $pageItemSize = 10px
    position absolute
    display flex !important
    justify-content center
    left 0
    right 0
    bottom -($columnPaddingXs * 2)

    li
      display block
      position relative
      width $pageItemSize
      height $pageItemSize
      padding 0
      margin 0 ($pageItemSize / 2)
      flex-shrink 0
      shadowInset(4px)
      cursor pointer

      &.slick-active
        shadow($colorMain2, 4px)

    button
      position absolute
      fullSize()
      padding 0
      opacity 0

  .slick
    &-list
      width 100%

    &-track
      display flex

    &-slide > div
      height 100%

      & > *
        outline none
