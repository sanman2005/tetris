.game
  position relative
  flex(column)

  &__stats
    flex()
    margin-top 30px

    &-label
      margin-right 10px

    &-value
      font-size 20px
      font-weight bold
      color $colorMain1

  &:not(&--over) &__over
    transform scale(0) translate(-100%, -100%)
    pointer-events none

  &__over
    position absolute
    top 50%
    left 50%
    transform scale(1) translate(-50%, -50%)
    transition(transform, 1s)
    font-size 50px
    color $colorRed2
    font-weight 900

    .button
      margin-top 100px

      &:hover
        background-color $colorOrange

  &__exit
    max-width 150px
    margin-top 20px
